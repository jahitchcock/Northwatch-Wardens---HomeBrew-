{
  // Homebrewery Markdown Preview extension
  // Extension ID: officerhalf.homebrewery-vscode
  "homebrewery.enabled": true,

  // Force a light (paper) look in the Markdown preview pane
  "markdown.styles": [
    ".vscode/homebrewery-preview-light.css"
  ],

  // Recommended: prevent preview jumpiness & hover-selection reflow
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.markEditorSelection": false,
  "dmbinder.chromeExecutablePath": "\\.local-chromium\\win64-686378\\chrome-win\\chrome.exe",

  // Enable semantic highlighting for Dungeons & Markdown syntax
  "editor.semanticHighlighting.enabled": true,
  
  // Custom token colors for Homebrewery/D&D Markdown syntax highlighting
  // These match the scopes defined in the Dungeons & Markdown extension
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.control",
        "settings": {
          "foreground": "#0066CC",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "constant.character.set.regexp",
        "settings": {
          "foreground": "#D73A4A",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "support.type",
        "settings": {
          "foreground": "#6F42C1",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "variable.other.constant",
        "settings": {
          "foreground": "#005CC5"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#22863A"
        }
      }
    ]
  }
}
